<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Theming-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
    </style>
    <style name="MyActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
    </style>
    <style name="MyTitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="inputWhite">
        <item name="android:layout_width">222dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#FF1300</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/inputwhite</item>
    </style>
    <style name="inputRed">
        <item name="android:layout_width">222dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/inputred</item>
    </style>


    <style name="navigationBar">
        <item name="android:background">#FF1300</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17sp</item>
        <item name="android:height">53dp</item>
    </style>
    <style name="instrucciones">
        <item name="android:width">600dp</item>
        <item name="android:textColor">#FF1300</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:height">40dp</item>
    </style>
    <style name="reactivos">
        <item name="android:width">190dp</item>
        <item name="android:height">30dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="myBorderView">
        <!-- 3dp so the background border to be visible -->
        <item name="android:background">@drawable/borde</item>
    </style>
</resources>