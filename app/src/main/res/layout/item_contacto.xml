<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_contactos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/cardview_border">
    <androidx.cardview.widget.CardView
        android:id="@+id/cVContactos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvEtiNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Nombre: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvEtiNombre"
                android:layout_alignTop="@+id/tvEtiNombre"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvEtiTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvEtiNombre"
                android:layout_alignLeft="@+id/tvEtiNombre"
                android:text="Teléfono: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvEtiTelefono"
                android:layout_alignTop="@+id/tvEtiTelefono"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvEtiCumpleanios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvEtiTelefono"
                android:layout_alignLeft="@+id/tvEtiTelefono"
                android:text="Cumpleaños: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvCumpleanios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvEtiCumpleanios"
                android:layout_alignTop="@+id/tvEtiCumpleanios"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvEtiNota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvEtiCumpleanios"
                android:layout_alignLeft="@+id/tvEtiCumpleanios"
                android:text="Nota: "
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvNota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvEtiNota"
                android:layout_alignTop="@+id/tvEtiNota"
                android:textColor="@color/black"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
